row1 = ["⬜️","⬜️","⬜️"]
row2 = ["⬜️","⬜️","⬜️"]
row3 = ["⬜️","⬜️","⬜️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")
position = input("Where do you want to put the treasure? ")

column = position[0]
row = position[1]
column = int(column)
row = int(row)

map[column-1][row-1] = "X"

print(f"{row1}\n{row2}\n{row3}")
